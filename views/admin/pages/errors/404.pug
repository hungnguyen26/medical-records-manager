doctype html
html(lang="en")
  head
    title #{pageTitle}
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    style.
      body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }

      .container {
        text-align: center;
      }

      h1 {
        font-size: 6rem;
        margin-bottom: 0.5rem;
        color: #343a40;
      }

      p {
        font-size: 1.25rem;
        margin-bottom: 2rem;
        color: #6c757d;
      }

      a {
        text-decoration: none;
        color: #007bff;
        font-size: 1rem;
      }

      a:hover {
        color: #0056b3;
      }
  body
