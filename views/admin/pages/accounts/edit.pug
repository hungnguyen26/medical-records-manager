extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    .block-main
        if(Role.quyen === "admin")
            +alert-error("5000")
            +alert-success("5000")
            
            h3(class="mb-4") Chỉnh sửa người dùng
            .form-edit
                form(
                    action=`${prefixadmin}/accounts/edit/${account.id}?_method=PATCH`
                    method='POST'
                    enctype="multipart/form-data"
                ) 
                    div(class="form-group")
                        label(for="fullName") Họ tên 
                            span.required ✳
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            value=account.fullName
                        ) 
                    div(class="form-group")
                        label(for="email") Email 
                            span.required ✳
                        input(
                            type="text"
                            class="form-control"
                            id="email"
                            name="email"
                            value=account.email
                        ) 
                    div(class="form-group")
                        label(for="password") Mật khẩu
                            span.required ✳
                        input(
                            type="text"
                            class="form-control"
                            id="password"
                            name="password"
                        ) 
                    div(
                        class="form-group"
                        upload-img
                    )
                        label(for="avatar") Ảnh đại diện
                        input(
                            type="file"
                            class="form-control-file"
                            id="avatar"
                            name="avatar"
                            accept="image/*"
                            upload-img-input
                        )
                        img(
                            src=account.avatar
                            upload-img-preview
                            class="img-preview"
                        )
                        button(class="delete-img btn btn-outline-danger" type="button") <i class="fa-solid fa-trash"></i>  Xóa ảnh
                    div(class="form-group")
                        label(for="phone") Số điện thoại
                            span.required ✳
                        input(
                            type="text"
                            class="form-control"
                            id="phone"
                            name="phone"
                            value=account.phone
                        ) 
                    div(class="form-group")
                        label(for="address") Địa chỉ
                            span.required ✳
                        input(
                            type="text"
                            class="form-control"
                            id="address"
                            name="address"
                            value=account.address
                        ) 
                    div(class="form-group")
                        label(for="dateOfBirth") Ngày sinh
                            span.required ✳
                        input(
                            type="text"
                            class="form-control"
                            id="dateOfBirth"
                            name="dateOfBirth"
                            placeholder="dd/mm/yyyy "
                            value=account.dateOfBirth
                        ) 
                    div(class="form-group")
                        label(for="Role_id") Chức vụ
                        span.required  ✳
                            select(name="Role_id" id="Role_id" class="form-control")
                                option(disabled selected) -- Chọn chức vụ -- 
                                each item in roles  
                                    option(
                                        value=item.id
                                        selected=(item.id == account.Role_id ? true : false) 
                                    ) #{item.title}
                    div(class="form-group")
                        label(for="sex") Giới tính
                            span.required ✳
                    div(class=" form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="sexInMale"
                            name="sex"
                            value="male"
                            checked=(account.sex == "male" ? true : false)
                        ) 
                        label(for="sexInMale" class="form-check-label") Nam
                    div(class=" form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="sexInFemale"
                            name="sex"
                            value="female"
                            checked=(account.sex == "female" ? true : false)
                        ) 
                        label(for="sexInFemale" class="form-check-label") Nữ
                    div(class="form-group")
                        label(for="status") Trạng thái
                            span.required ✳
                    div(class=" form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="statusActive"
                            name="status"
                            value="active"
                            checked=(account.status == "active" ? true : false)
                        ) 
                        label(for="statusActive" class="form-check-label") Hoạt động
                    div(class=" form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="statusInActive"
                            name="status"
                            value="inactive"
                            checked=(account.status == "inactive" ? true : false)
                        ) 
                        label(for="statusInActive" class="form-check-label") Dừng hoạt động
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-info"
                        )  Chỉnh sửa người dùng
                        button(
                            type="button" 
                            onclick="history.back();" 
                            class="btn btn-secondary"
                            style="margin-left: 10px; padding: 5px 10px; width: 82px;   "
                        ) Hủy