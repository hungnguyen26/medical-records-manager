extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    .block-main
        +alert-error("5000")
        if(Role.quyen == "admin")
            h3(class="mb-4") Thêm mới người dùng
            .form-create-user
                form(
                    action=`${prefixadmin}/accounts/create`
                    method='POST'
                    enctype="multipart/form-data"
                ) 
                    div(class="form-group")
                        label(for="fullName") Họ tên 
                            span.required ✳
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                        ) 
                    div(class="form-group")
                        label(for="email") Email 
                            span.required ✳
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                        ) 
                    div(class="form-group")
                        label(for="password") Mật khẩu
                            span.required ✳
                        input(
                            type="text"
                            class="form-control"
                            id="password"
                            name="password"
                        ) 
                    div(
                        class="form-group"
                        upload-img
                    )
                        label(for="avatar") Ảnh đại diện
                        input(
                            type="file"
                            class="form-control-file"
                            id="avatar"
                            name="avatar"
                            accept="image/*"
                            upload-img-input
                        )
                        img(
                            src=""
                            upload-img-preview
                            class="img-preview"
                        )
                        button(class="delete-img btn btn-outline-danger" type="button") <i class="fa-solid fa-trash"></i>  Xóa ảnh
                    div(class="form-group")
                        label(for="phone") Số điện thoại
                            span.required ✳
                        input(
                            type="text"
                            class="form-control"
                            id="phone"
                            name="phone"
                        ) 
                    div(class="form-group")
                        label(for="address") Địa chỉ
                            span.required ✳
                        input(
                            type="text"
                            class="form-control"
                            id="address"
                            name="address"
                        ) 
                    div(class="form-group")
                        label(for="dateOfBirth") Ngày sinh
                            span.required ✳
                        input(
                            type="text"
                            class="form-control"
                            id="dateOfBirth"
                            name="dateOfBirth"
                            placeholder="dd/mm/yyyy "
                        ) 
                    div(class="form-group")
                        label(for="Role_id") Chức vụ
                        span.required  ✳
                            select(name="Role_id" id="Role_id" class="form-control")
                                option(disabled selected) -- Chọn chức vụ -- 
                                each item in roles  
                                    option(value=item.id) #{item.title}
                    div(class="form-group")
                        label(for="sex") Giới tính
                            span.required ✳
                    div(class="form-group form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="sexInMale"
                            name="sex"
                            value="male"
                            checked
                        ) 
                        label(for="sexInMale" class="form-check-label") Nam
                    div(class="form-group form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="sexInFemale"
                            name="sex"
                            value="female"
                        ) 
                        label(for="sexInFemale" class="form-check-label") Nữ
                    
                    div(class="form-group")
                        label(for="status") Trạng thái
                            span.required ✳
                    div(class="form-group form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="statusActive"
                            name="status"
                            value="active"
                            checked
                        ) 
                        label(for="statusActive" class="form-check-label") Hoạt động
                    div(class="form-group form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="statusInActive"
                            name="status"
                            value="inactive"
                        ) 
                        label(for="statusInActive" class="form-check-label") Dừng hoạt động
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) <i class="fa-solid fa-plus" style="margin-right: 6px;font-size: medium"></i> Tạo mới người dùng